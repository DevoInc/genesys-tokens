{
  "cmp": {
    "switchControl": {
      "text": {
        "typo": {
          "fontSize": {
            "sm": {
              "value": "{alias.typo.fontSize.action.xxs.value}"
            },
            "md": {
              "value": "{alias.typo.fontSize.action.xs.value}"
            },
            "lg": {
              "value": "{alias.typo.fontSize.action.sm.value}"
            }
          },
          "lineHeight": {
            "sm": {
              "value": "{alias.typo.lineHeight.action.xxs.value}"
            },
            "md": {
              "value": "{alias.typo.lineHeight.action.xs.value}"
            },
            "lg": {
              "value": "{alias.typo.lineHeight.action.sm.value}"
            }
          },
          "letterSpacing": {
            "value": "{alias.typo.letterSpacing.action.em.value}"
          },
          "fontWeight": {
            "value": "{alias.typo.fontWeight.action.value}"
          }
        },
        "color": {
          "text": {
            "unchecked": {
              "base": {
                "value": "{alias.fields.color.text.base.unchecked.value}"
              },
              "error": {
                "value": "{alias.fields.color.text.error.unchecked.value}"
              },
              "success": {
                "value": "{alias.fields.color.text.success.unchecked.value}"
              },
              "warning": {
                "value": "{alias.fields.color.text.warning.unchecked.value}"
              }
            },
            "checked": {
              "base": {
                "value": "{alias.fields.color.text.base.checked.value}"
              },
              "error": {
                "value": "{alias.fields.color.text.error.checked.value}"
              },
              "success": {
                "value": "{alias.fields.color.text.success.checked.value}"
              },
              "warning": {
                "value": "{alias.fields.color.text.warning.checked.value}"
              }
            }
          }
        }
      }
    }
  }
}
